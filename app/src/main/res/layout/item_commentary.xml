<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/commentaryDate"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data do comentário:"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/commentaryASpots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugares Disponiveis:"
        android:paddingStart="10dp"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentaryDate"/>
    <TextView
        android:id="@+id/commentaryRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="start"
        android:text="isto e um comentario com 200 caracteres que serve para definir o layout do meu item para a recyclerview que esta a ser desenhada. e como padding vai levar caracteres aleatorios. adasdasdgwvebngºaigno"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentaryASpots"/>

</androidx.constraintlayout.widget.ConstraintLayout>