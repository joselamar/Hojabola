<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parkingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbarP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvParking"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addParking"
        app:layout_constraintTop_toBottomOf="@id/my_toolbarP">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/addParking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Adicionar Estacionamento"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>